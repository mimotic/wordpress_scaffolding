DB_NAME=mimoticdb
DB_USER=mimoticdbu
DB_PASSWORD=password
DB_HOST=mysql
DB_PORT=3306
TABLE_PREFIX=wp_
SITE_ENVIROMENT=local
SITE_URL=http://localhost/
WP_ALLOW_MULTISITE=false
MULTISITE=false
DISALLOW_FILE_MODS=false

# Runtime toggles
# PHP_VERSION supports 8.1, 8.2, 8.3, or 8.4 (legacy versions require a custom image)
PHP_VERSION=8.3
NODE_VERSION=20
WWWUSER=1000
WWWGROUP=1000

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ===========================================
# SECURITY CONFIGURATION (mu-scripts)
# By default, the most restrictive settings are applied.
# Uncomment and set to true to RELAX security.
# ===========================================

# REST API: Allow public access to /wp/v2/users endpoints (username enumeration)
# WP_REST_ALLOW_USERS=false

# REST API: Allow public access to all REST API endpoints
# WP_REST_PUBLIC_ACCESS=false

# SVG: Allow SVG uploads (values: false, true, 'admin')
# WP_ALLOW_SVG=false

# Keep jQuery Migrate for legacy compatibility
# WP_JQUERY_MIGRATE=false

# Keep ?ver= query strings on assets (for cache busting)
# WP_SHOW_ASSET_VERSIONS=false
